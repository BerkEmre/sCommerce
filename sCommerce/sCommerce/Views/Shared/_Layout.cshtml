                wishlistGuncelle();
            });

            request.fail(function () {
                // your failure code here
            });
        }

        function onSepetEkle(id, miktar, ekleCikar) {
            var request = $.ajax({
                url: '/Home/SepetEkle',
                type: 'POST',
                dataType: 'JSON',
                data: { id: id, miktar: miktar, ekleCikar: ekleCikar }
            });

            request.done(function (data) {
                if (data.durum == "true" && $("#CPAGE").length == 0 && $("#COPAGE").length == 0) {
                    $("#modalSepeteEkleResim").attr("src", "/Content/icerik/urun/kucuk/" + data.urun.urunResimleri[0].resim);
                    $("#modalSepeteEkleUrunAdi").html(data.urun.urunAdi);
                    $("#modalSepeteEkleMiktar").html(data.miktar);
                    $("#modalSepeteEkleFiyat").html(data.urun.fiyat + " TL");
                    $("#modalSepeteEkleToplam").html((data.urun.fiyat * data.miktar) + " TL");
                    $("#modalSepeteEkle").modal("show");
                }

                sepetGuncelle(data.count);
                cartGuncelle();
                alisverisiTamamlaGuncelle();
            });

            request.fail(function () {
                // your failure code here
            });
        }

        function onHizliGoster(id) {
            var request = $.ajax({
                url: '/Home/HizliGoster',
                type: 'POST',
                dataType: 'JSON',
                data: { id: id }
            });

            request.done(function (data) {
                $("#modalHizliGosterResim").attr("src", "/Content/icerik/urun/kucuk/" + data.urun.urunResimleri[0].resim);
                $("#modalHizliGosterModelGrubu").html(data.urun.modelGrubu.modelGrubu);
                $("#modalHizliGosterUrunAdi").html(data.urun.urunAdi);
                $("#modalHizliGosterFiyat").html(data.urun.fiyat + " TL");
                $("#modalHizliGosterEskiFiyat").html(data.urun.eskiFiyat != 0 ? data.urun.eskiFiyat + " TL" : "");
                $("#modalHizliGosterUrunAciklamasi").html(data.urun.urunAciklamasi);
                $("#modalHizliGosterUrunID").val(data.urun.urunID);
                $("#modalHizliGosterUrunMiktar").val(1);
                $("#modalHizliGosterUrunMiktar").attr("size", data.urun.miktar);
                $("#modalHizliGoster").modal("show");
            });

            request.fail(function () {
                // your failure code here
            });
        }

        (function ($) {
            $.fn.serializeFormJSON = function () {

                var o = {};
                var a = this.serializeArray();
                $.each(a, function () {
                    if (o[this.name]) {
                        if (!o[this.name].push) {
                            o[this.name] = [o[this.name]];
                        }
                        o[this.name].push(this.value || '');
                    } else {
                        o[this.name] = this.value || '';
                    }
                });
                return o;
            };
        })(jQuery);

        $("#modalHizliGosterFormGonder").on("submit", function (event) {
            event.preventDefault();
            var data = $(this).serializeFormJSON();

            onSepetEkle(data.id, data.miktar, 1);

            $("#modalHizliGoster").modal("hide");
        });

        $("#productSatinAl").on("submit", function (event) {
            event.preventDefault();
            var data = $(this).serializeFormJSON();

            onSepetEkle(data.id, data.miktar, 1);
        });

        function sepetGuncelle(adet) {
            $.ajax({
                url: '/Home/SepetGuncelle',
                type: 'POST',
                dataType: 'html',
                success: function (data) {
                    $("#divSepet").html(data);
                }
            });
            if (adet > 0) {
                $("#sepetAdet").attr("class", "tt-badge-cart");
                $("#sepetAdet").html(adet);
            }
            else {
                $("#sepetAdet").attr("class", "");
                $("#sepetAdet").html("");
            }
        }

        function wishlistGuncelle() {
            if ($("#WLPAGE").length != 0) {
                $.ajax({
                    url: '/Home/WishlistGuncelle',
                    type: 'POST',
                    dataType: 'html',
                    success: function (data) {
                        $("#tt-pageContent").html(data);
                    }
                });
            }
        }

        function cartGuncelle() {
            if ($("#CPAGE").length != 0) {
                $.ajax({
                    url: '/Home/CartGuncelle',
                    type: 'POST',
                    dataType: 'html',
                    success: function (data) {
                        $("#tt-pageContent").html(data);
                    }
                });
            }
        }

        function alisverisiTamamlaGuncelle() {
            if ($("#COPAGE").length != 0) {
                $.ajax({
                    url: '/Home/AlisverisiTamamlaGuncelle',
                    type: 'POST',
                    dataType: 'html',
                    success: function (data) {
                        $("#tt-pageContent").html(data);
                    }
                });
            }
        }

        $("#mesajGonder").on("submit", function (event) {
            event.preventDefault();
            var form = $(this);

            $.ajax({
                type: "POST",
                url: "MesajGonder",
                data: form.serialize(),
                success: function (data) {
                    if (data.basarili) {
                        $("#adSoyad").val("");
                        $("#eMail").val("");
                        $("#telefon").val("");
                        $("#baslik").val("");
                        $("#mesaj").val("");
                        mesajGoster("<i class='icon-f-68'></i> Mesajınız alınmıştır, en kısa sürede size dönüş yapacağız.");
                    } else {
                        mesajGoster(data.hata);
                    }
                }
            });

        });

        function mesajGoster(mesaj) {
            $("#modalMesajText").html(mesaj);
            $("#modalMesaj").modal("show");
        }

        function DevaminiYukle() {
            $.ajax({
                url: '/Home/DevaminiYukle',
                type: 'POST',
                dataType: 'html',
                success: function (data) {
                    $("#itemList").append(data);
                }
            });
        }
