    <script>
        function onFavoriEkle(id) {
            var request = $.ajax({
                url: '/Home/FavoriEkle',
                type: 'POST',
                dataType: 'JSON',
                data: { id: id }
            });

            request.done(function (data) {
                if (data.login) {
                    $("#promoImage").attr("src", "/Content/icerik/urun/kucuk/" + data.resim);
                    if (data.durum == "true") {
                        $("#promoMesaj").html("FAVORİLERE EKLENDİ");
                    }
                    else {
                        $("#promoMesaj").html("FAVORİLERDEN ÇIKARILDI");
                    }
                    $("#promoFavori").fadeTo("90", 1);
                }
                else {
                    $("#modalUyeOl").modal("show");
