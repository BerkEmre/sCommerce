
@{
    ViewBag.Title = "Giriş Yap";
    int id = ViewBag.id;
}
<br />
<div class="tt-breadcrumb">
    <div class="container">
        <ul>
            <li><a href="@Url.Action("Index")">Ana Sayfa</a></li>
            <li>Giriş Yap</li>
        </ul>
    </div>
</div>
<div id="tt-pageContent">
    <div class="container-indent">
        <div class="container">
            <h1 class="tt-title-subpages noborder">ARAMIZA KATILIN</h1>
            <div class="tt-login-form">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <div class="tt-item">
                            <h2 class="tt-title">GİRİŞ YAP</h2>
                            <div class="form-default form-top">
                                <form method="post" action="/Home/GirisYap">
                                    <input type="hidden" name="id" value="@id" />
                                    <div class="form-group">
                                        <label for="loginInputName">E-MAIL *</label>
                                        <div class="tt-required">* Gerekli alanlar</div>
                                        <input type="email" name="eMail" class="form-control" placeholder="E-mail" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="loginInputEmail">ŞİFRE *</label>
                                        <input type="password" name="sifre" class="form-control" placeholder="Şifreniz" required>
                                    </div>
                                    <div class="row">
                                        <div class="col-auto mr-auto">
                                            <div class="form-group">
                                                <button class="btn btn-border" type="submit">GİRİŞ YAP</button>
                                            </div>
                                        </div>
                                        <div class="col-auto align-self-end">
                                            <div class="form-group">
                                                <ul class="additional-links">
                                                    <li><a href="@Url.Action("ForgotPass")">Şirenizi mi unuttunuz?</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="tt-item">
                            <h2 class="tt-title">MÜŞTERİMİZ DEĞİL MİSİNİZ?</h2>
                            <div class="form-default">
                                <form method="post" action="/Home/UyeOl">
                                    <input type="hidden" name="id" value="@id" />
                                    <div class="form-group">
                                        <label for="loginInputName">AD *</label>
                                        <div class="tt-required">* Gerekli alanlar</div>
                                        <input type="text" name="ad" class="form-control" placeholder="Adınız" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="loginLastName">SOYAD *</label>
                                        <input type="text" name="soyad" class="form-control" placeholder="Soyadınız" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="loginInputEmail">E-MAIL *</label>
                                        <input type="email" name="eMail" class="form-control" placeholder="E-mail" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="loginInputPassword">ŞİFRE *</label>
                                        <input type="password" name="sifre" class="form-control" placeholder="Şifreniz" required>
                                    </div>
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="form-group">
                                                <button class="btn btn-border" type="submit">KAYIT OL</button>
                                            </div>
                                        </div>
                                        <div class="col-auto align-self-center">
                                            <div class="form-group">
                                                <ul class="additional-links">
                                                    <li>Kayıt ol butonu ile <a href="@Url.Action("Page", new { id = 4 })" target="_blank">Üyelik Şartları</a>nı kabul etmiş olursunuz.</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
